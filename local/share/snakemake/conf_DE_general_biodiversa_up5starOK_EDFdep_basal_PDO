rule samples_data:
    input: meta=BIT_DIR+"/selected_metadata_annot_final_nolinfo_nooutlier", wanted="wanted", egfdep=DATA+"/EGF_dep", egfundep=DATA+"/EGF_undep"
    output: "samples_data"
    shell:
        """
            bawk '{{print $1,"EGFdep"}}' {input.egfdep} > {output}.tmp
            bawk '{{print $1,"EGFundep"}}' {input.egfundep} >> {output}.tmp
			echo -e "id\\tbatch\\tmodel\\tclass" > {output}
			cat {input.meta} | perl -pane 's/(CRC[\d\w]+)-(\d)/$1.$2/' \
			| cut -f 1,6,7 | filter_1col 3 {input.wanted} \
			| bawk '{{print $1,$2,substr($1,0,7)}}' | translate -d -a -j -k {output}.tmp 3 >> {output}
            rm {output}.tmp
        """

